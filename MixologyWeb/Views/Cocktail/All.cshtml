@using MixologyWeb.Core.Models;
@{
}
@model IEnumerable<CocktailViewModel>


<div class="card-body pb-0">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
            @foreach (var cocktail in Model)
            {
                <div class="card bg-light d-flex flex-fill">
                    <div class="card-body pt-0">
                        <div class="row" style="padding-top:10px">
                            <div class="col-7">
                                <h2 class="lead"><b>@cocktail.Name</b></h2>
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                    @foreach (var item in cocktail.Ingredients)
                                    {
                                        <li ><span class="fa-li"></span> @item.Name</li>
                                    }
                                    </ul>
                            </div>
                            <div class="col-5 text-center">
                                @if (!string.IsNullOrEmpty(cocktail.ImageUrl))
                                {
                                    <img src="@cocktail.ImageUrl" alt="drink-avatar" class="img-circle img-fluid">
                                }
                                else
                                {
                                    <img src="~/img/defaultDrink.png" alt="drink-avatar" class="img-circle img-fluid">
                                }
                                
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a href="Details/@cocktail.Id" class="btn btn-sm btn-primary">
                                Details
                            </a>
                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>