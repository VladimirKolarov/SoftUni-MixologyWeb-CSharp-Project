        <li class="nav-item">
            <a href="/cocktail/all" class="nav-link active">
                <i class="far fa-circle nav-icon"></i>
                <p>All Cocktails</p>
            </a>
        </li>

        <li class="nav-item">
            <a href="/ContactUs/ContactCard" class="nav-link active">
                <i class="far fa-circle nav-icon"></i>
                <p>Contacts</p>
