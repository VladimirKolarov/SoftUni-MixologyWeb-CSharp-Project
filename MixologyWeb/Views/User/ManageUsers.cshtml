@using MixologyWeb.Core.Models;
@model IEnumerable<UserListViewModel>

@{

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-gradient-dark">
                <h3 class="card-title">Users List</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-controller="user" asp-action="edit" asp-route-id="@user.Id" class="btn btn-block btn-info btn-sm">Edit</a>
                                    <a asp-controller="user" asp-action="roles" asp-route-id="@user.Id" class="btn btn-block btn-warning btn-sm">Roles</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
