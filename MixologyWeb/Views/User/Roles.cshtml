@using MixologyWeb.Core.Models;
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
    var items = (IEnumerable<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-8">
        <div class="card card-primary">
            <div class="card-header bg-gradient-dark">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <form id="roles" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <input type="hidden" name="UserId" value="@Model.UserId" />
                        <input type="hidden" name="Name" value="@Model.Name" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <h3>User: <span style="color:cornflowerblue">@Html.DisplayFor(m=>m.Name)</span></h3>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>User Roles</label>
                                <p>Select one or many:</p>
                                <select asp-for="RoleNames" asp-items="@items" class="form-control">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <button id="edit-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-8">
        <div class="card card-primary">
            <div class="card-title bg-gradient-dark" style="padding:5px">
                <p>Current Roles for this user:</p>
            </div>
            <div>
                <ul style="list-style:none; margin:0; padding:0">
                    @foreach (var item in items)
                    {
                        if (item.Selected)
                        {
                            <li><h4 style="margin:0;padding:5px">@item.Value</h4></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
